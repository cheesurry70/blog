---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>Philip Walton</title>
 <link href="http://philipwalton.com/atom.xml" rel="self"/>
 <link href="http://philipwalton.com/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://philipwalton.com/</id>
 <author>
   <name>Philip Walton</name>
   <email>philip@philipwalton.com</email>
 </author>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="{{ post.url | absolute }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ post.id | absolute }}</id>
   {% capture excerpt %}{{ {{ post.excerpt | strip_html | truncatewords: 40 }} <a rel="full-article" href="{{ post.url | absolute }}">[more]</a>{% endcapture %}
   <content type="html">{{ excerpt | xml_escape }}</content>
 </entry>
 {% endfor %}

</feed>